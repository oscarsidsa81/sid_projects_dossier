<odoo>

    <!-- Wizard form -->
    <record id="view_sid_dossier_assign_wizard_form" model="ir.ui.view">
        <field name="name">sid.dossier.assign.wizard.form</field>
        <field name="model">sid.dossier.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Dossier de calidad">
                <sheet>
                    <group>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="quotation_id" options="{'no_create': True}"/>
                    </group>

                    <group>
                        <field name="contract_kind" widget="radio"/>
                        <field name="principal_quotation_id"
                               attrs="{'invisible':[('contract_kind','!=','adenda')], 'required':[('contract_kind','=','adenda')]}"
                               options="{'no_create': True}"/>
                    </group>

                    <group>
                        <field name="mode" widget="radio"/>
                        <field name="existing_folder_id"
                               attrs="{'invisible':[('mode','!=','existing')], 'required':[('mode','=','existing')]}"
                               options="{'no_create': True}"/>
                        <field name="new_folder_name" attrs="{'invisible':[('mode','!=','new')]}"/>
                    </group>

                    <group attrs="{'invisible':[('warning_message','=',False)]}">
                        <field name="warning_message" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action: Crear dossier -->
    <record id="action_dossier_create_wizard" model="ir.actions.act_window">
        <field name="name">Crear dossier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sid.dossier.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sid_dossier_assign_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{'default_mode': 'new'}</field>
    </record>

    <!-- Action: Vincular dossier -->
    <record id="action_dossier_link_wizard" model="ir.actions.act_window">
        <field name="name">Vincular dossier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sid.dossier.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sid_dossier_assign_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{'default_mode': 'existing'}</field>
    </record>

</odoo>
