<odoo>

    <!-- TREE de candidatos -->
    <record id="view_dossier_assign_candidate_tree" model="ir.ui.view">
        <field name="name">dossier.assign.candidate.tree</field>
        <field name="model">dossier.assign.candidate</field>
        <field name="arch" type="xml">
            <tree string="Sugerencias" editable="bottom">
                <field name="folder_id"/>
                <field name="parent_folder_id"/>
                <field name="match_basis"/>
                <button name="action_pick" string="Seleccionar" type="object" class="oe_highlight"/>
            </tree>
        </field>
    </record>

    <!-- WIZARD -->
    <record id="view_dossier_assign_wizard_form" model="ir.ui.view">
        <field name="name">dossier.assign.wizard.form</field>
        <field name="model">dossier.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Asignar carpeta de dossier">
                <sheet>
                    <notebook>
                        <page string="Asignación">
                            <group>
                                <field name="sale_order_id" readonly="1"/>
                                <field name="mode" widget="radio"/>

                                <!-- sin domain aquí; lo aplica el onchange en Python -->
                                <field name="existing_folder_id"
                                       attrs="{'invisible':[('mode','!=','existing')], 'required':[('mode','=','existing')]}"
                                       options="{'no_create': True}"/>

                                <field name="new_folder_name"
                                       attrs="{'invisible':[('mode','!=','new')], 'required':[('mode','=','new')]}"/>
                            </group>
                        </page>

                        <page string="Sugerencias">
                            <group>
                                <field name="candidate_ids">
                                    <tree string="Carpetas candidatas">
                                        <field name="folder_id"/>
                                        <field name="parent_folder_id"/>
                                        <field name="match_basis"/>
                                        <button name="action_pick" string="Seleccionar" type="object"
                                                class="oe_highlight"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ACCIÓN -->
    <record id="action_dossier_assign_wizard" model="ir.actions.act_window">
        <field name="name">Asignar carpeta de dossier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dossier.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_dossier_assign_wizard_form"/>
        <field name="target">new</field>
        <!-- no context -->
    </record>

    <!-- BOTÓN EN SALE.ORDER (header) -->
    <record id="sale_order_form_inherit_dossier_button" model="ir.ui.view">
        <field name="name">sale.order.form.dossier.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button type="object"
                        name="action_open_dossier_assign_wizard"
                        string="Dossier"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>

</odoo>
