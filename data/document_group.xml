<odoo>
    <data noupdate="1">

        <!-- Categoría del módulo de dossier -->
        <record id="sid_dossier_management" model="ir.module.category">
            <field name="name">Módulo de Dossier</field>
            <field name="sequence">10</field>
            <field name="description">Categoría para agrupar los grupos de Dossier</field>
        </record>

        <!-- Grupo de usuarios de dossier -->
        <record id="group_dossier_manager" model="res.groups">
            <field name="name">Usuario de Dossier</field>
            <field name="category_id" ref="sid_dossier_management"/>
            <field name="comment">Permite a los usuarios acceder y gestionar los dossiers.</field>
        </record>

        <record id="group_dossier_user" model="res.groups">
            <field name="name">Creador de Dossier</field>
            <field name="category_id" ref="sid_dossier_management"/>
            <field name="comment">Permite a los usuarios abrir los dossiers desde la venta.</field>
        </record>

    </data>
</odoo>
