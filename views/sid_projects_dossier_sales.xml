<odoo>
    <data>

        <record id="action_open_dossier_folder" model="ir.actions.act_window">
            <field name="name">Abrir Dossier</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>
        <!--SALE ORDER - ORDERS 	model="ir.ui.view" 	sale.view_order_tree-->

        <record id="sid_projects_dossier_sales" model="ir.ui.view">
            <field name="name">sid_projects_dossier_sales.tree</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="1000"/>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]/field[@name='opportunity_group_id']" position="after">
                    <field name="tiene_dossier" optional="hide" readonly='0'/>
                </xpath>
                <xpath expr="//field[@name='quotations_id']" position="before">
                    <button
                            name="sid_projects_dossier.action_open_dossier_folder"
                            type="action"
                            string="Dossier"
                            icon="fa-book"
                            class="oe_inline"
                            attrs="{'invisible': ['|',('state','!=','sale'),('tiene_dossier','!=',True)]}"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>