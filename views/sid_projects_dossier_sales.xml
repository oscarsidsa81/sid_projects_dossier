<odoo>
    <data>
        <!--SALE ORDER - ORDERS 	model="ir.ui.view" 	sale.view_order_tree-->

        <record id="sid_projects_dossier_sales_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="1000"/>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]/field[@name='opportunity_group_id']" position="after">
                    <field name="tiene_dossier" optional="hide" readonly='0'/>
                </xpath>
                <xpath expr="//field[@name='quotations_id']" position="before">
                    <button
                            name="action_open_dossier_folder"
                            type="object"
                            string="Dossier"
                            icon="fa-book"
                            class="oe_inline"
                            attrs="{'invisible': ['|',('state','!=','sale'),('tiene_dossier','!=',True)]}"
                            groups="sid_projects_dossier.group_dossier_user,sid_projects_dossier.group_dossier_manager"
                    />
                </xpath>
            </field>
        </record>

        <record id="sid_projects_dossier_sales_form_buttons" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="16"/>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <!--    <br/> -->
                    <span>
                        <button class="btn-info" icon="fa-plus" name="action_create_dossier_folders"
                                type="object" groups="sid_dossier_management.group_dossier_manager,sales_team.group_sale_manager"
                                string=" Crear Dossier"/>
                    </span>
                    <span>
                        <button class="btn-info" icon="fa-book" name="action_open_dossier_folder"
                                groups="sid_dossier_management.group_dossier_user,sales_team.group_sale_manager" type="object"
                                string=" Ver Dossier"/>
                    </span>
                </xpath>
            </field>
        </record>


    </data>
</odoo>